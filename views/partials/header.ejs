<header id="top-header">
    <img src="/images/site/icon.png" alt="Site Logo" width="65" height="50">
    <span class="siteName">
        <a href="/" title="Return to home page">CSE Motors</a>
    </span>
    <div>
        <% if (locals.loggedIn) { %>
            <span class="account">
                <a href="/account/" title="Go to Account Management">
                    Welcome <%= locals.accountData.account_firstname %>
                </a>
            </span>
            <span class="account">
                <a href="/account/logout" title="Click to Log Out">Logout</a>
            </span>
        <% } else { %>
            <span class="account">
                <a href="/account/login" title="Click to Log In">MY ACCOUNT</a>
            </span>
        <% } %>
    </div>
</header>
